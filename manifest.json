{
  "manifest_version": 3,
  "name": "Noir - Minimal New Tab",
  "version": "1.0.0",
  "description": "A minimal, elegant new tab experience with smart features and beautiful themes",
  "author": "mosadd1X",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage", "topSites", "bookmarks", "geolocation"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "192": "icons/icon192.png",
    "512": "icons/icon512.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png",
      "192": "icons/icon192.png"
    },
    "default_title": "Noir - Minimal New Tab"
  },
  "homepage_url": "https://github.com/mosadd1X/noir"
}
